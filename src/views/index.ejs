    </section>

    <section class= "galeria">

        <div class="habitaciones">  
            <img class="img-galeria" src="/images/habitaciones/16.jpg" alt="imagen de pieza">
            <a href="/habitaciones"><button class="btn-galeria"><strong class="colorGreen">Habitaciones</strong></button></a>
        </div>
        
        <div class="restaurant">
            <img class="img-galeria" src="/images/restaurant/08.jpg" alt="imagen restaurant">
            <a href="/carta"><button class="btn-galeria"><strong class="colorGreen">Restaurant</strong></button></a>
        </div>
        
        <div class="eventos">
