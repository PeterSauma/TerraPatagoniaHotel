    <section class="info">

        <div class="ubicacion">
            <h2>Cómo llegar</h2>
        </div>
        <div class="ubicacion">
            <h3 class="colorBronw">Dirección: Av Falsa 123</h3>
        </div>
        <div class="mapa">
            <a href="https://goo.gl/maps/Fxhih4oHwriujXvW7" target="_blank"><img class="img-galeria" src="/images/general/map.PNG" alt="imagen eventos"></a>
        </div>
        
    </section>
    
    <section class="serves">
        <div>
            <h2>Servicios</h2>
        </div>
        <article class="article-serves">
            <div class="icon-serves"><i class="colorBronw fa-solid fa-bell-concierge"></i><p class="colorBronw">Recepción 24 horas</p></div>
