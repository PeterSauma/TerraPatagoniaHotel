<!-- MAIN -->
<main>
    <section class="carrusel">
        <div class="static-photo">
            <img src="/images/habitaciones/16.jpg" alt="1">
        </div>
        <div class="slider">
            <ul>
                <li>
                    <img src="/images/habitaciones/16.jpg" alt="1">
                </li>
                <li>
                    <img src="/images/general/22A.jpg" alt="2">
